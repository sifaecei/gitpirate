#audio hotkeys
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -D pulse set Master 3%+ unmute && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -D pulse set Master 3%- unmute && $refresh_i3status
