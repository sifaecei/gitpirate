#hotkey run app
bindsym Mod1+w exec --no-startup-id firefox
bindsym Mod1+h exec --no-startup-id thunar
bindsym Mod1+t exec --no-startup-id /opt/Telegram/Telegram 
bindsym Print exec --no-startup-id flameshot gui
bindsym Shift+Mod1+w exec --no-startup-id mousepad
bindsym Mod1+F12 exec --no-startup-id pavucontrol
bindsym Mod1+m exec --no-startup-id thunderbird
bindsym Mod1+F2 exec --no-startup-id "sleep 1 && xset dpms force suspend"
bindsym XF86ScreenSaver exec --no-startup-id "i3lock -c 222222"
bindsym XF86Display exec --no-startup-id arandr


#power contol
bindsym Control+Mod1+Delete mode "$mode_system"
set $mode_system System (s)uspend, (r)eboot, (p)oweroff
mode "$mode_system" {
    bindsym s exec --no-startup-id systemctl suspend, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym p exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}


#scratchpad
# Make the currently focused window a scratchpad
bindsym $mod+minus move scratchpad
# Show the first scratchpad window
bindsym $mod+equal scratchpad show


